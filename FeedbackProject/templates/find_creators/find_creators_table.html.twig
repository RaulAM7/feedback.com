{% extends 'base.html.twig' %}

{% block title %}Find Creators
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="title">Find Creators</h1>
		<table class="creator-table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Username</th>
					<th>Email</th>
					<th>Projects Owned</th>
					<th>Posts Included</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for creator in creators %} 
                    {% if creator.getIsCreator() %}
                        <tr>
                            <td>{{ creator.name }}</td>
                            <td>{{ creator.username ?: 'Unknown Username' }}</td>
                            <td>{{ creator.getEmail() }}</td>
                            <td>{{ creator.projectsOwned|length }}</td>
                            {# <td>{{ creator.postsIncluded|length }}</td> #}
                            <td>
                                {# <a href="{{ path('creator_profile', { id: creator.id }) }}" class="read-more">View</a> #}
                            </td>
                        </tr>
                    {% endif %}
				{% endfor %}
			</tbody>
		</table>
	</div>

	<style>
		.container {
			max-width: 1200px;
			margin: auto;
			padding: 20px;
		}
		.title {
			text-align: center;
			font-size: 2em;
			margin-bottom: 20px;
		}
		.creator-table {
			width: 100%;
			border-collapse: collapse;
		}
		.creator-table th,
		.creator-table td {
			padding: 12px;
			text-align: left;
		}
		.creator-table th {
			background-color: #2CD8D5;
			color: white;
		}
		.creator-table tr:nth-child(even) {
			background-color: #f5f5f5;
		}
		.read-more {
			color: #2CD8D5;
			text-decoration: none;
		}
		.read-more:hover {
			text-decoration: underline;
		}
	</style>
{% endblock %}

